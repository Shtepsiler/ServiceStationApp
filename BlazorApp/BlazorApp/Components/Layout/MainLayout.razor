@inherits LayoutComponentBase

<ErrorBoundary>
    <ChildContent>
        <div class="flex-column mx-5">
            <div class="accordion-header">
                <NavMenu />
            </div>

            <main>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </ChildContent>
    <ErrorContent>
        <div id="blazor-error-ui">
            An unhandled error has occurred. Please try reloading the page.
            <a href="" class="reload">Reload</a>
            <a class="dismiss">🗙</a>
        </div>
    </ErrorContent>
</ErrorBoundary>
<style>
    #custom-alert {
        display: none;
        position: fixed;
        top: 20px;
        right: 20px;
        background-color: #007bff;
        color: white;
        padding: 15px;
        border-radius: 5px;
        z-index: 1000;
        font-size: 16px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: opacity 0.3s ease;
    }

    #custom-alert.show {
        display: block;
        opacity: 1;
    }

    #custom-alert.hide {
        opacity: 0;
    }
</style>
<script>
    function showTemporaryAlert(message, duration) {
        const alertBox = document.getElementById('custom-alert');
        alertBox.textContent = message;
        alertBox.classList.add('show');

        // Приховуємо повідомлення після певного часу
        setTimeout(() => {
            alertBox.classList.add('hide');
        }, duration - 300); // Start fade-out 300ms before the duration ends

        // Повністю приховуємо повідомлення
        setTimeout(() => {
            alertBox.classList.remove('show', 'hide');
        }, duration);
    }
</script>
<div id="custom-alert">Запчастина успішно збережена!</div>